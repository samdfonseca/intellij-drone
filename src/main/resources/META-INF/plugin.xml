<idea-plugin>
    <id>com.samdfonseca.intellij-drone</id>
    <name>IntelliJ Drone</name>
    <vendor email="sam.fonseca@nytimes.com" url="https://samdfonseca.github.io/intellij-drone" />

    <description>Access Drone build information through IntelliJ</description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>
    <idea-version since-build="192.4147"/>

    <application-components>
    </application-components>
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                id="drone"
                instance="com.samdfonseca.intellijDrone.settings.DroneSettings"
                groupId="tools"
                groupWeight="130"
                displayName="Drone" />
        <applicationService
                serviceImplementation="com.samdfonseca.intellijDrone.settings.DroneSettingsProvider" />
        <projectConfigurable
                parentId="drone"
                id="drone.project"
                instance="com.samdfonseca.intellijDrone.settings.DroneProjectSettings"
                groupId="tools"
                groupWeight="130"
                displayName="Drone" />
        <projectService
                serviceImplementation="com.samdfonseca.intellijDrone.settings.DroneProjectSettingsProvider" />
        <toolWindow id="Drone" secondary="true" icon="/repoTreeToolWindow/plus.png" anchor="right"
                    factoryClass="com.samdfonseca.intellijDrone.DroneToolWindowFactory"
                    conditionClass="com.samdfonseca.intellijDrone.DroneToolWindowCondition" />
<!--        <toolWindow id="Drone.Project"-->
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
